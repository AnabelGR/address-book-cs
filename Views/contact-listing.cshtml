@{
  Layout="Shared/_Layout.cshtml";
}

<h2>@Model.GetName()</h2>
<ul>
  <li>Phone Number: @Model.GetPhoneNumber()</li>
  <li>Email: @Model.GetEmail()</li>
</ul>
<form action="/contacts/@Model.GetId()" method="post">
  <button class="btn" type="submit">Remove this contact.</button>
</form>
<p><a href="/" class="btn">Return to Home Page</a></p>
