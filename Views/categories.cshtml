@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Categories</h1>
@if (@Model.Count == 0)
{
  <h3>No contact categories have been added yet.</h3>
}
@foreach (var category in Model)
{
  <h3><a href='/categories/@category.GetId()' class="category-heading">@category.GetName()</a></h3>
}
<p><a href='/' class='btn'>Back home</a></p>
