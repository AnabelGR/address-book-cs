@{
  Layout="Shared/_Layout.cshtml";
}

@if ( Model.Count > 0 ) {
  <h1>Contact List</h1>
  <ul>
    @foreach(var posting in Model)
    {
      <li><a href="/contacts/@posting.GetId()">@posting.GetName()</a></li>
    }
  </ul>
} else {
  <h2>Start adding your contacts.</h2>
}
<p><a href="/contacts/new">Add a contact.</a></p>
<form action="/contacts/cleared" method="post">
  <button type="submit" name="button">Clear All Contacts</button>
</form>
