@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Add A Contact</h1>
<div>
  <form class="form-horizontal" action="/" method="post">
    <div class="form-group">
      <label class="col-md-2" for="name">Name:</label>
      <div class="col-md-10">
        <input class="form-control" id="name" name="name" type="text">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2" for="phoneNumber">Phone Number:</label>
      <div class="col-md-10">
        <input class="form-control" id="phoneNumber" name="phoneNumber" type="number">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2" for="email">email:</label>
      <div class="col-md-10">
        <input class="form-control" id="email" name="email" type="text">
      </div>
    </div>
    <h2>Address:</h2>
    <div class="form-group">
      <label class="col-md-2" for="address">Address:</label>
      <div class="col-md-10">
        <input class="form-control" id="address" name="address" type="text">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2" for="city">City:</label>
      <div class="col-md-10">
        <input class="form-control" id="city" name="city" type="text">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2" for="state">State:</label>
      <div class="col-md-10">
        <input class="form-control" id="state" name="state" type="text">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2" for="zipCode">Zip Code:</label>
      <div class="col-md-10">
        <input class="form-control" id="zipCode" name="zipCode" type="number">
      </div>
    </div>
    <button class="btn" type="submit">Add Contact</button>
</form>
</div>
