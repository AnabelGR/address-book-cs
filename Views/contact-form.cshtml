@{
  Layout="Shared/_Layout.cshtml";
}
<h1>Add A Contact</h1>
  <div class="container">
    <form class="form-horizontal" action="/" method="post">
        <div class="form-group">
          <label class="col-md-2" for="firstName">First Name:</label>
          <div class="col-md-10">
          <input class="form-control" id="firstName" name="firstName" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-2" for="lastName">Last Name:</label>
          <div class="col-md-10">
          <input class="form-control" id="lastName" name="lastName" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-2" for="phoneNumber">Phone Number:</label>
          <div class="col-md-10">
          <input class="form-control" id="phoneNumber" name="phoneNumber" type="tel">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-2" for="email">email:</label>
          <div class="col-md-10">
          <input class="form-control" id="email" name="email" type="email">
          </div>
        </div>
        <h2>Address:</h2>
        <div class="form-group">
          <label class="col-md-2" for="address">Address:</label>
          <div class="col-md-10">
          <input class="form-control" id="address" name="address" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-2" for="city">City:</label>
          <div class="col-md-10">
          <input class="form-control" id="city" name="city" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-2" for="state">State:</label>
          <div class="col-md-10">
          <input class="form-control" id="state" name="state" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-2" for="zipCode">Zip Code:</label>
          <div class="col-md-10">
          <input class="form-control" id="zipCode" name="zipCode" type="number">
          </div>
        </div>
        <h2>Details:</h2>
        <div class="form-group">
          <label class="col-md-2" for="birthday">Birthday:</label>
          <div class="col-md-10">
          <input class="form-control" id="birthday" name="birthday" type="date">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-2" for="anniversary">Anniversary:</label>
          <div class="col-md-10">
          <input class="form-control" id="anniversary" name="anniversary" type="date">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-2" for="notes">Notes:</label>
          <div class="col-md-10">
          <input class="form-control" id="notes" name="notes" type="text">
          </div>
        </div>
        <button class="btn" type="submit">Add Contact</button>
    </form>
    <p><a href="/" class="btn">Return Home</a></p>
  </div>
